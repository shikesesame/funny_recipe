<main>
  <%= flash[:notice] %>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">

      <%= render 'public/recipes/recipe', recipe: @recipe, customer: @customer %>

      <div class="col-md-8 mx-auto">
      <h2>Recipes</h2>

        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>レシピ名</th>
              <th>製作時間</th>
              <th>ジャンル</th>
              <th>コメント数</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @recipes.each do |recipe| %>
            <tr>
              <td><%= link_to public_customer_path(@customer.id) do %><div class="attachment customer image"><%= image_tag @customer.get_image, size: "50x50" %></div><% end %></td>
              <td><%= link_to public_recipe_path(recipe.id) do %><%= recipe.name %><% end %></td>
              <td><%= recipe.time %></td>
              <td><%= recipe.genre %></td>
              <td><%= link_to "#{recipe.recipe_comments.count} コメント", public_recipe_path(recipe.id) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</main>