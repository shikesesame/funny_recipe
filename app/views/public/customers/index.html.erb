<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">

      <%= render 'public/recipes/recipe', recipe: @recipe, customer: @customer %>

      <div class="col-md-8 mx-auto">
          <h2>Customers</h2>

          <table class="table">
              <thead>
                    <tr>
                      <th>プロフィール画像</th>
                      <th>ユーザー名</th>
                      <th colspan="3"></th>
                    </tr>
              </thead>

              <tbody>
                <% @customers.each do |customer| %>
                    <tr>
                        <td><div class="attachment customer image"><%= image_tag customer.get_image, size: "100x100" %></div></td>
                        <td><%= customer.name %></td>
                        <td><%= link_to "ユーザー詳細", public_customer_path(customer.id), class: "btn btn-sm btn-primary" %></td>
                    </tr>
                <% end %>
              </tbody>
          </table>
      </div>

    </div>
  </div>
    
</main>