<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">

      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Customer info</h2>

        <% if @customer.errors.any? %>
        <h3><%= @customer.errors.count %>errors prohibited this obj from being saved:</h3>
        <ul>
          <% @customer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
        <% end %>
        
        <%= form_with model: @customer, url: public_customer_path(@customer.id) do |f| %>
        <div class="form-group">
          <label for="customer_name">Name</label>
          <%= f.text_field :name, class: "form-control name" do %><%= @customer.name %><% end %>
        </div>
        
        <div class="form-group">
          <label for="customer_image">Image</label>
          <%= f.file_field :image, accept: "image/*", class: "form-control-file customer-image" %>
        </div>
        
        <div class="form-group">
          <label for="customer_body">Body</label>
          <%= f.text_area :body, class: "form-control body" %>
        </div>
        
        <div class="form-group">
          <%= f.submit "Update Customer", class: "btn btn-secondary" %>
        </div>
        
        <% end %>
      </div>
    </div>
  </div>
</main>