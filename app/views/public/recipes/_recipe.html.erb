<div class="col-md-4">
    
    <h2>ユーザー登録</h2>
    
    <%= image_tag customer.get_image, size: "100x100" %>
    
    <table class="table">
        <tbody>
            <tr>
            	<th>ユーザー名</th>
            	<th><%= customer.name %></th>
            </tr>
            
            <tr>
            	<th>ユーザーメッセージ</th>
            	<th><%= customer.body %></th>
            </tr>
        </tbody>
    </table>

        <div class="row">
            <%= link_to edit_public_customer_path(customer.id),class: "col-md-12" do %><div class="btn btn-outline-secondary btn-block"><i class="fas fa-user-cog"></i></div><% end %>
        </div>

    

    <h2 class="mt-3">レシピ新規投稿</h2>
    
    <%= form_with model: recipe, url: public_recipes_path do |f| %>
        <!-- 画像投稿 -->
        <div class="form-group">
            <label for="recipe_image">料理画像</label>
            <%= f.file_field :image, accept: "image/*" %>
        </div>
            
        <!-- レシピ名のフォーム -->
        <div class="form-group">
            <label class="recipe_name">レシピ名</label>
            <%= f.text_field :name, class: "form-control recipe_name" %>
        </div>
                
        <!-- 材料のフォーム -->
        <div class="form-group">
            <label class="recipe_material">料理の具材</label>
            <%= f.text_area :material, placeholder: "料理の具材を入れてください", class: "form-control recipe_material" %>
        </div>
                
        <!-- レシピの説明 -->
        <div class="form-group">
            <label class="recipe_explanation">レシピの説明</label>
            <%= f.text_area :explanation, placeholder: "レシピの説明を入れてください", class: "form-control recipe_explanation" %>
        </div>
                
        <!-- 製作時間 -->
        <div class="form-group">
            <label class="recipe_time">製作時間</label>
            <%= f.select(:time, [["5分未満",5],["15分",15],["30分",30],["45分",45],["60分",60]]) %>
        </div>
                
        <!-- 料理のジャンル -->
        <div class="form-group">
            <label class="genre">料理のジャンル</label>
            <%= f.radio_button :genre, "和食" %>和食
            <%= f.radio_button :genre, "洋食・西洋" %>洋食・西洋
            <%= f.radio_button :genre, "中華" %>中華
            <%= f.radio_button :genre, "その他" %>その他
        </div>
                
        <div class="form-group">
            <%= f.submit "投稿", class: "btn btn-success" %>
        </div>
                
    <% end %>
</div>