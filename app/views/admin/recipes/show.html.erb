<main>
    <p id="notice"></p>
    <div class="container">
        <div class="row">
            
        <div class="col-sm-12 col-md-8 col-lg-8 px-5 px-sm-0 mx-auto">
        
            <h2>レシピ詳細</h2>
            <!-- 商品画像 -->
            <%= image_tag @recipe.get_image, size: "100x100" %>
            
            <table class="table">
                <tr>
                    <th>レシピ名</th>
                    <td><%= @recipe.name %></td>
                </tr>
                
                <tr>
                    <th>料理の具材</th>
                    <td><%= @recipe.material %></td>
                </tr>
                
                <tr>
                    <th>レシピの説明</th>
                    <td><%= @recipe.explanation %></td>
                </tr>
                
                <tr>
                    <th>製作時間</th>
                    <td><%= @recipe.time %>分</td>
                </tr>
                
                <tr>
                    <th>料理のジャンル</th>
                    <td><%= @recipe.genre %></td>
                </tr>
                
            </table>
            
            <%= link_to "編集", edit_admin_recipe_path(@recipe.id), class: "btn btn-sm btn-success" %> |
            <%= link_to "新規投稿", new_admin_recipe_path, class: "btn btn-sm btn-info" %>
            
        </div>    
        </div>
    </div>
        
</main>